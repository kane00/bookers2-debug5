<!-- フォローされている人の一覧画面 -->
<div class="container">
    <div class="row">
    	<div class="col-xs-10">
			<h2>Followers Users</h2>
			<!-- indexをベースに -->
			<% if @users.count > 0 %>
			<!-- フォロワーがいれば -->
			<table class="table">
				<thead>
					<tr>
						<th>image</th>
						<th>name</th>
						<!-- 4つ追加 -->
						<th></th>
						<th></th>
						<th></th>
						<th></th>
					</tr>
				</thead>

				<tbody>
					<% @users.each do |user| %>
					<tr>
						<td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></td>
						<td><%= user.name %></td>
						<td>フォロー数：
						<%= user.followings.count %></td>
						<td>フォロワー数：
						<%= user.followers.count %></td>
						<td><%= link_to relationships_path(user), method: :post do %>
							フォローする
							<% end %></td>
						<td><%= link_to "Show", user, class: "user_#{user.id}" %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
			<% else %>
			<!-- フォロワーがいなければ -->
			  <p>ユーザーはいません</p>
			<% end %>
		</div>
	</div>
</div>